<!DOCTYPE html>
<html ng-app="APIDemo">
  <head>
    <title>{{ title }}</title>
  </head>

  <body ng-controller="TwilioController" ng-init="init()">
    <h1>{{ title }}</h1>
    <p>Welcome to {{ title }}</p>

    <input ng-model="recipient" type="text" placeholder="203-123-4567" /><br ><br />
    <textarea ng-model="message" placeholder="Message"></textarea>
    <br />
    <button ng-click="sendSMS()">SEND</button>


    <script type="text/javascript" src="/min/vendor.js"></script>
    <script type="text/javascript" src="/min/app.js"></script>


  </body>



</html>